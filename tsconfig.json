{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./app/frontend/*"],
    },
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": [
    "app/frontend/**/*.ts",
    "app/frontend/**/*.tsx",
    "app/frontend/**/*.d.ts"
  ]
}
